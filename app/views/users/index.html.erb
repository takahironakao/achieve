<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>

      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <% if user.id != current_user.id %>
        <li>
      <div class="item">
        <%= link_to user.name, user  %><br>
         <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
    </div>
        <%= profile_img(user) %>
        <%= user.email %>
        <%= render partial: 'users/mypages/follow_form', locals: { user: user } if signed_in? %>
      <% end %>
</div>
<% end %>